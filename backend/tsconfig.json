// aimed only at typechecking
{
   "compilerOptions": {
      "baseUrl": "./src",
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "isolatedModules": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "sourceMap": true
   },
   "include": ["src/**/*"]
}
